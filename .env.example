# ==========================================
# Personal Zerodha Backend - Environment Configuration
# ==========================================

# Environment Settings
ENVIRONMENT=development  # development, staging, production
APP_HOST=127.0.0.1
APP_PORT=8000

# ==========================================
# Zerodha API Configuration
# ==========================================
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here

# Redirect URL - Auto-generated based on ENVIRONMENT, APP_HOST, APP_PORT
# For production, set your actual domain
# REDIRECT_URL=https://yourdomain.com/auth/callback

# ==========================================
# Redis Configuration
# ==========================================
# Redis URL - Auto-generated based on REDIS_HOST, REDIS_PORT, etc.
# Or set explicitly: REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==========================================
# Supabase Configuration (for future use)
# ==========================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# ==========================================
# Application Settings
# ==========================================
DEBUG=True
LOG_LEVEL=INFO

# ==========================================
# Cache TTL Settings (in seconds)
# ==========================================
CACHE_TTL_USER_PROFILE=3600
CACHE_TTL_HOLDINGS=300
CACHE_TTL_POSITIONS=60

# ==========================================
# Production Environment Example
# ==========================================
# ENVIRONMENT=production
# APP_HOST=yourdomain.com
# APP_PORT=443
# REDIS_HOST=redis.production.host
# REDIS_PASSWORD=your_redis_password
# DEBUG=False
CACHE_TTL_QUOTES=1